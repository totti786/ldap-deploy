{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "title": "LDAP Infrastructure",
  "uid": "ldap-infra",
  "version": 1,
  "refresh": "30s",
  "schemaVersion": 38,
  "style": "dark",
  "tags": ["ldap", "infrastructure"],
  "templating": {
    "list": []
  },
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "timepicker": {},
  "timezone": "browser",
  "panels": [
    {
      "title": "LDAP Status",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "up{job=\"openldap\"}",
          "legendFormat": "{{ instance }}",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        }
      },
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": {"text": "DOWN", "color": "red"},
                "1": {"text": "UP", "color": "green"}
              }
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": null},
              {"color": "green", "value": 1}
            ]
          }
        }
      }
    },
    {
      "title": "Total Users",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
      "targets": [
        {
          "expr": "ldap_entries_total{objectClass=\"inetOrgPerson\"}",
          "legendFormat": "Users",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Total Groups",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
      "targets": [
        {
          "expr": "ldap_entries_total{objectClass=\"posixGroup\"}",
          "legendFormat": "Groups",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Active Connections",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
      "targets": [
        {
          "expr": "ldap_connections_current",
          "legendFormat": "Connections",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Operations per Second",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
      "targets": [
        {
          "expr": "rate(ldap_operations_total[5m])",
          "legendFormat": "{{ operation }}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "lineWidth": 1,
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "title": "Operation Latency",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
      "targets": [
        {
          "expr": "histogram_quantile(0.50, rate(ldap_operation_duration_seconds_bucket[5m]))",
          "legendFormat": "p50",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, rate(ldap_operation_duration_seconds_bucket[5m]))",
          "legendFormat": "p95",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, rate(ldap_operation_duration_seconds_bucket[5m]))",
          "legendFormat": "p99",
          "refId": "C"
        }
      ]
    },
    {
      "title": "Bind Operations",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
      "targets": [
        {
          "expr": "rate(ldap_bind_success_total[5m])",
          "legendFormat": "Success",
          "refId": "A"
        },
        {
          "expr": "rate(ldap_bind_failures_total[5m])",
          "legendFormat": "Failures",
          "refId": "B"
        }
      ]
    },
    {
      "title": "Search Operations",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
      "targets": [
        {
          "expr": "rate(ldap_search_operations_total[5m])",
          "legendFormat": "Searches",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Kerberos Status",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 20},
      "targets": [
        {
          "expr": "up{job=\"kerberos\"}",
          "legendFormat": "{{ instance }}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Samba Status",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 6, "y": 20},
      "targets": [
        {
          "expr": "up{job=\"samba\"}",
          "legendFormat": "{{ instance }}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "System Resources",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
      "targets": [
        {
          "expr": "100 - (avg by(instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
          "legendFormat": "CPU {{ instance }}",
          "refId": "A"
        },
        {
          "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
          "legendFormat": "Memory {{ instance }}",
          "refId": "B"
        }
      ]
    }
  ]
}
